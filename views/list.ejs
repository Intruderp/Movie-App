<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/styles.css">
    <title>Crud Application - View users</title>
</head>

<body>
    <div class="navbar navbar-dark bg-dark">
        <div class="container">
            <a href="/" class="navbar-brand">MOVIE APPLICATION</a>
            <% if(message){ %>
                <a href="/login" class="navbar-brand login-btn">Login</a>
                <a href="/register" class="navbar-brand register-btn">Register</a>
            <%}else{%>
                <a href="/logout" class="navbar-brand register-btn">Logout</a>
            <%}%>
        </div>
    </div>
    <div class="container" style="padding-top: 10px;">




        <% if(message){ %>
            <h5 class="alert alert-danger mt-4"><%=message%></h5>
        <%}%>
        <div class="row">
            <div class="col-6">
                <h3>Movies</h3>
            </div>
            <div class="col-6">
                <a href="/add" class="btn btn-primary">Add</a>
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-md-8">
                <table class="table table-striped">
                    <tr>
                        <th>Movie Name</th>
                        <th>Rating</th>
                        <th>Cast</th>
                        <th>Genre</th>
                        <th>Release Date</th>
                        <th>Edit</th>
                        <th>Delete</th>
                        
                    </tr>
                    <% if(results.length>0) {%>
                        <% for(var i=0;i<results.length;i++) {%>
                        <tr>
                            <td><%= results[i].name %></td>
                            <td><%= results[i].rating %></td>
                            <td><%= results[i].cast %></td>
                            <td><%= results[i].genre %></td>
                            <td><%= results[i].release_date %></td>
                            <td>
                                <a href="/edit/<%= results[i].ID %>" class="btn btn-primary">Edit</a>
                            </td>
                            <td>
                                <a href="/delete/<%= results[i].ID %>" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                        <%}%>
                    <%} else { %>
                        <tr>
                            <td colspan="5">Records not found add some movies</td>
                        </tr>
                    <%}%>
                </table>
            </div>
        </div>
    </div>
    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
